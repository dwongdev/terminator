{
  "name": "iris",
  "version": "1.0.0",
  "description": "Modern AI-powered research and automation platform with advanced web capabilities",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter frontend --filter backend dev",
    "dev:watch": "concurrently \"pnpm --filter ./frontend dev\" \"pnpm --filter ./backend dev\" \"pnpm run watch:build\"",
    "watch:build": "chokidar \"frontend/src/**/*\" -c \"pnpm --filter ./frontend build && cp -r frontend/.next backend/public\"",
    "build": "pnpm --filter ./frontend build && cp -r frontend/.next backend/public/ && pnpm --filter ./backend build",
    "start": "pnpm --filter ./backend start",
    "clean": "pnpm --recursive clean",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "test": "pnpm --recursive test"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "keywords": [
    "ai",
    "chat",
    "agent",
    "vercel-ai-sdk",
    "agentic",
    "multimodal"
  ],
  "license": "MIT"
}